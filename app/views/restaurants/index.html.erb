
<div class="container">
  <h1>All restaurants</h1>

  <%= link_to "Create new restaurant", new_restaurant_path, class: "btn btn-danger w-100"  %>

      <% @restaurants.each do |restaurant| %>
        <p>
          <h3><%= restaurant.name %></h3>
          <p>
            <%= restaurant.address %>
            <br>
            <%= restaurant.phone_number %>
          </p>
          <%= link_to "See more...", restaurant_path(restaurant), class: "btn btn-primary" %>
        </p>
      <% end %>

</div>
